<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sewer"
    tools:context="com.example.ZombieSlayer.Views.SettingsView">

    <Button
        android:id="@+id/Difficulty"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:background="@android:color/darker_gray"
        android:text="@string/difficulty"
        />
    <Button
        android:id="@+id/bColor"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/Difficulty"
        android:layout_centerInParent="true"
        android:layout_marginVertical="10dp"
        android:background="@android:color/darker_gray"
        android:text="@string/background_color"
        />
    <Button
        android:id="@+id/pColor"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/bColor"
        android:layout_centerInParent="true"
        android:background="@android:color/darker_gray"
        android:text="@string/player_color"
        />

</RelativeLayout>
